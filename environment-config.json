{
  "family": "alert-ingestion-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::528104389666:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "alert-ingestion",
      "image": "528104389666.dkr.ecr.ap-southeast-1.amazonaws.com/alert-ingestion:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-southeast-1"
        },
        {
          "name": "ENVIRONMENT",
          "value": "development"
        },
        {
          "name": "NOISE_REDUCTION_API_URL",
          "value": "http://ingestion-correlation-alb-318555208.ap-southeast-1.elb.amazonaws.com"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/alert-ingestion",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
